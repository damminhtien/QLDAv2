<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="suaModal<%=kv.ma_kv%>">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Sửa khoa viện <%=kv.ten_kv%></h4>
            </div>
            <form data-parsley-validate class="form-horizontal" action="/khoavien/sua/<%=kv.ma_kv%>" method="post" accept-charset="utf-8">
                <div class="modal-body">
                    <div class="container" style="width: 100%">
                        <div class="form-group col-sm-12">
                            <label class="control-label col-sm-2" for="ten_kv_sua_<%=kv.ma_kv%>">Tên khoa viện<span class="required">*</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" id="ten_kv_sua_<%=kv.ma_kv%>" required="required" class="form-control" name="ten_kv_sua_<%=kv.ma_kv%>" value="<%=kv.ten_kv%>" style="width: 100%">
                            </div>
                        </div>
                        <div class="form-group col-sm-12">
                            <label class="control-label col-sm-2" for="dia_chi_sua_<%=kv.ma_kv%>">Địa chỉ<span class="required">*</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" id="dia_chi_sua_<%=kv.ma_kv%>" required="required" class="form-control"  name="dia_chi_sua_<%=kv.ma_kv%>" value="<%=kv.dia_chi%>" style="width: 100%">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default">Làm mới</button>
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                </div>   
            </form>      
        </div>
    </div>
</div>