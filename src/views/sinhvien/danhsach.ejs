<!DOCTYPE html>
<html>
<head>
	<%include ../admin/layout/header%>
	<link href="/template/vendors/pnotify/dist/pnotify.css" rel="stylesheet">
	<%include ../admin/layout/style_dbtable%>
</head>
<body class="nav-md">
    <div class="container body">
      	<div class="main_container">
			<%include ../admin/layout/menu%>
			<!-- your code here -->
			<div class="right_col" role="main">
	            <div class="col-md-12 col-sm-12 col-xs-12">
                	<div class="x_panel">
                  		<div class="x_title">
                    		<h1 class="label label-success">Sinh viên</h1>
                    		<div class="clearfix"></div>
                  		</div>
             		 	<div class="x_content">
            				<table id="datatable-buttons" class="table table-striped table-hover table-bordered">
                      			<thead>
                        			<tr>
                          				<th class="alert-success"><h3>Mã sinh viên</h3></th>
				                        <th class="alert-success"><h3>Tên Sinh viên</h3></th>
				                        <th class="alert-success"><h3>Khoa</h3></th>
				                        <th class="alert-success"><h3>Lớp</h3></th>
				                        <th class="alert-success"><h3>Email</h3></th>
				                        <th class="alert-success"><h3>Mật khẩu</h3></th>
				                        <th class="alert-success"><h3>Sửa / Xóa</h3></th>
                        			</tr>
                      			</thead>
                      			<tbody>
                        			<% if(sinhvien != null ){ 
										sinhvien.forEach((sv,i)=>{%>
										<tr>
											<td><h2><%=sv.ma_sv%></h2></td>
											<td><h2><%=sv.ten_sv%></h2></td>
											<td><h2><%=sv.khoa%></h2></td>
											<td><h2><%=sv.lop%></h2></td>
											<td><h2><%=sv.email%></h2></td>
											<td><h2><%=sv.mat_khau%></h2></td>
											<td class="text-center">
												<a href="/sinhvien/sua/<%=sv.ma_sv%>" title="Sửa <%=sv.ten_sv%>"><button class="btn btn-warning btn-xs"><span class="fa fa-pencil"></span></button></a>	
												<a href="/sinhvien/xoa/<%=sv.ma_sv%>"><button class="btn btn-danger btn-xs"><span class="fa fa-trash"></span></button></a>
											</td>
										</tr>
									<%})}%>
                      			</tbody>
                    		</table>
                    		<a href="/sinhvien/them" title="Thêm Sinh viên"><button class="btn btn-info btn-lg btn-round" style="z-index: 99; right: 2%; bottom: 2%; position: fixed; width: 60px; height: 60px;"><span class="fa fa-plus"></span></button></a>
                  		</div>
                	</div>
              	</div>
			</div>	
			<!-- your code end-->
			<%include ../admin/layout/footer%>
		</div>
	</div>
	<%include ../admin/layout/script%>
	<%include ../admin/layout/script_dbtable%>
	<!-- pnotify -->
	<script src="/template/vendors/pnotify/dist/pnotify.js"></script>
    <script src="/template/vendors/pnotify/dist/pnotify.buttons.js"></script>
    <script src="/template/vendors/pnotify/dist/pnotify.nonblock.js"></script>
	<script>
	   	$('document').ready(function (){
	       $('.ui-pnotify').remove();
	       <%- include ../flash_message %>
	   	});
	</script>
</body>
</html>